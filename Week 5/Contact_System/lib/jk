class Person {
  String _name = ""; (Private)//برايفت

  // Getter لقراءة الاسم
  String get name => _name;

  // Setter لتعديل الاسم بشرط ألا يكون فارغًا
  void set name(String newName) {
    if (newName.isNotEmpty) {
      _name = newName;
    } else {
      print("Name can not be empty!");
    }
  }
}

void main() {
  Person person = Person();

  // تعيين اسم جديد
  person.name = "Ali";
  
  // طباعة الاسم
  print("Name: ${person.name}"); 

  // محاولة تعيين اسم فارغ
  person.name = ""; 
}


